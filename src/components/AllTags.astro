---
// This component displays a list of tags for audiences, technos and tracks.
import { getCollection } from 'astro:content';

const audiences = await getCollection('audiences');
const technos = await getCollection('technos');
const tracks = await getCollection('tracks');
---

<div style='display: flex; justify-content: space-between;'>
  <div class='tags'>
    <h5>Audiences</h5>
    {
      audiences.map((audience) => (
        <p class='tag'>
          <a href={`/audiences/${audience.slug}`}>{audience.data.label}</a>
        </p>
      ))
    }
  </div>
  <div class='tags'>
    <h5>Technos</h5>
    {
      technos.map((techno) => (
        <p class='tag'>
          <a href={`/technos/${techno.slug}`}>{techno.data.label}</a>
        </p>
      ))
    }
  </div>
  <div class='tags'>
    <h5>Tracks</h5>
    {
      tracks.map((track) => (
        <p class='tag'>
          <a href={`/tracks/${track.slug}`}>{track.data.label}</a>
        </p>
      ))
    }
  </div>
</div>
